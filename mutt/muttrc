# Editor
set editor=vim

# Email Signature
set signature=~/.mutt/joaosignature.sig

# About-me
set from="mail@gmail.com"
set realname="Jo√£o Vitor Mendes Pinto dos Santos"

# Imap settings
set imap_user="mail@gmail.com"
